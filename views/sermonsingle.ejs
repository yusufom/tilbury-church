<!DOCTYPE html>
<html class="no-js" lang="en">

<%- include('partials/head/header.ejs'); %>
    <body>

        <%- include('partials/head/menubar.ejs'); %>

        <% let images=image.find(im=> im.date == News.date)%>
  <% let imagea=JSON.parse(images.postPicture) %>

        <div class="page-header">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-12">
                        <div class="page-header-box">
                            <h1 class="text-anime-style-2" data-cursor="-opaque"><%= News.name %></h1>
                            <nav class="wow fadeInUp">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="#">home</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">Our Sermon</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="page-sermons-single">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8">
                        <div class="sermons-single-content">
                            <div class="sermons-featured-image">
                                <figure class="image-anime reveal" style="transform: translate(0px, 0px); opacity: 1; visibility: inherit;">
                                    <img src="/images/post/<%= imagea.filename %>" alt="" style="transform: translate(0px, 0px);">
                                </figure>
                            </div>
                            <div class="sermons-entry">
                                <h2 class="text-anime-style-2" data-cursor="-opaque"><%= News.name %></h2>
                                <p class="wow fadeInUp" data-wow-delay="0.2s" style="visibility: visible; animation-delay: 0.2s; animation-name: fadeInUp;"><%= News.policies %></p>
                                <p class="wow fadeInUp" data-wow-delay="0.6s" style="visibility: visible; animation-delay: 0.6s; animation-name: fadeInUp;"><%= News.description %></p>
                            </div>
                        </div>
                    </div>
    
                    <div class="col-lg-4">
                        <div class="sermons-sidebar wow fadeInUp" data-wow-delay="0.25s" style="visibility: visible; animation-delay: 0.25s; animation-name: fadeInUp;">
                            <div class="about-sermons-sidebar">
                                <div class="about-sermons-title">
                                    <h3>about the sermons</h3>
                                </div>
                                <div class="about-sermons-item">
                                    <div class="icon-box">
                                        <i class="fa-solid fa-user"></i>
                                    </div>
                                    <div class="about-sermons-content">
                                        <h3>sermon from </h3>
                                        <p><%= News.mapLink %></p>
                                    </div>
                                </div>
                                <div class="about-sermons-item">
                                    <div class="icon-box">
                                        <i class="fa-solid fa-tag"></i>
                                    </div>
                                    <div class="about-sermons-content">
                                        <h3>categories</h3>
                                        <p><%= News.address %></p>
                                    </div>
                                </div>
                                <div class="about-sermons-item">
                                    <div class="icon-box">
                                        <i class="fa-solid fa-calendar-days"></i>
                                    </div>
                                    <div class="about-sermons-content">
                                        <h3>date &amp; time</h3>
                                        <p><%= News.date %></p>
                                    </div>
                                </div>
                                <!-- About Sermons Item End -->
                            </div>
                            <!-- About Sermons Sidebar End -->
                        </div>
                        <!-- Sermons Sidebar End -->
                    </div>
                </div>
            </div>
        </div>

        <%- include('partials/head/footer.ejs'); %>

    </body>
</html>