<!doctype html>
<html lang="en">

<%- include('partials/heading.ejs'); %>

    <body data-sidebar="dark">

        <div id="layout-wrapper">

            <%- include('partials/header.ejs'); %>
            <div class="main-content">
                <div class="page-content">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-12">
                                <div class="page-title-box d-flex align-items-center justify-content-between">
                                    <h4 class="mb-0 font-size-18">Gallery</h4>
                                    <div class="page-title-right">
                                        <ol class="breadcrumb m-0">
                                            <li class="breadcrumb-item">
                                                <a href="javascript: void(0);">Dashboard</a></li>
                                            <li class="breadcrumb-item active">Gallery</li>
                                        </ol>
                                    </div>
                                </div>
                                    <div class="row">
                            <div class="col-lg-12">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="d-flex mb-1">
                                            <h4 class="card-title mb-4">Gallery</h4>
                                            <a class="ml-auto" href="/admin/addGallery">
                                                <button class="ml-auto btn btn-sm" style="background: tomato; color: #fff">Add New Image</button>
                                                </a>
                                                </div>
                                     <div class="row">
                                    
                                    <% if(typeof gallery != "undefined"){ %>
                                    <% gallery.forEach(gal => { %>
                                        <% let Image = JSON.parse(gal.picture) %>
                                    <div class="col-xl-3 col-sm-12">
                                        <div class="card">
                                            <div class="card-body">
                                                <div class="product-img position-relative">
                                                   
                                                    <img style="height: 250px; border-radius: 50px; width: 100%" src="/images/gallery/<%= Image.filename %>" alt="" class="img-fluid mx-auto d-block">
                                                </div>
                                                <div class="mt-4 text-center">
                                                    <form action="/admin/gallery/deleteGallery/<%= gal._id %>" method="post">
                                                    <button class="btn btn-danger btn-sm"><span class="fas fa-trash"></span></button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <% }) %>
                                    <%}%>
                                </div>   
                                    </div>
                                </div>
                            </div>
                        </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <%- include('partials/footer'); %>
            </div>
        </div>
        <script src="/libs/jquery/jquery.min.js"></script>
        <script src="/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="/libs/metismenu/metisMenu.min.js"></script>
        <script src="/libs/simplebar/simplebar.min.js"></script>
        <script src="/libs/node-waves/waves.min.js"></script>
        <script src="/js2/app.js"></script>
    </body>
</html>