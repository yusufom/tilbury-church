<!doctype html>
<html lang="en">

<%- include('partials/heading.ejs'); %>

        <body data-sidebar="dark">

        <div id="layout-wrapper">

            <%- include('partials/header.ejs'); %>

            <div class="main-content">

                <div class="page-content">
                    <div class="container-fluid">

                        <div class="row">
                            <div class="col-12">
                                <div class="page-title-box d-flex align-items-center justify-content-between">
                                    <h4 class="mb-0 font-size-18">Message</h4>

                                    <div class="page-title-right">
                                        <ol class="breadcrumb m-0">
                                            <li class="breadcrumb-item">
                                                <a href="javascript: void(0);">Dashboard</a></li>
                                            <li class="breadcrumb-item active">Message</li>
                                        </ol>
                                    </div>
                                </div>
                                    <div class="row">
                            <div class="col-lg-12">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="d-flex mb-1">
                                            <h4 class="card-title mb-4 text-capitalize"><%= message.title %></h4>
                                            
                                                </div>
                                       <div class="email-rightbar mb-3">

                                    <div class="">
                                        
                                        <div class="">
                                            <div class="media mb-4">
                                                <img style="height: 50px;" class="d-flex mr-3 rounded-circle avatar-sm" src="/image/admin.png" alt="Generic placeholder image">
                                                <div class="media-body">
                                                    <h5 class="font-size-14 mt-1 text-capitalize"><%= message.name %></h5>
                                                    <small class="text-muted"><%= message.email %></small>
                                                </div>
                                            </div>

                                            <h4 class="mt-0 font-size-16 text-capitalize"><%= message.title %></h4>
                                            <p><%= message.message %></p>
                                            <p>Sincerly,</p>
                                            <div>
                                                <a class="btn btn-primary" href="mailto:<%= message.email %>">Reply</a>
                                            </div>
                                            <hr/>
                                            <span class="text-secondary">
                                                <%= message.date %>
                                            </span>    
                                        </div>

                                    </div>
                                </div>
                                
                                        
                                    </div>
                                </div>
                        </div>
                        </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                
                <%- include('partials/footer'); %>
            </div>

        </div>

        <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.form/4.3.0/jquery.form.min.js"></script>
    <script src="/js2/new.js"></script>
    <script src="/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="/libs/metismenu/metisMenu.min.js"></script>
        <script src="/libs/simplebar/simplebar.min.js"></script>
        <script src="/libs/node-waves/waves.min.js"></script>

        <script src="/js2/app.js"></script>
  
    </body>

</html>
