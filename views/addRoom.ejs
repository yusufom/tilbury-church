<!doctype html>
<html lang="en">

<%- include('partials/heading'); %>

    <body data-sidebar="dark">

        <div id="layout-wrapper">

            <%- include('partials/header'); %>
            
            <div class="main-content">
                <div class="page-content">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-12">
                                <div class="page-title-box d-flex align-items-center justify-content-between">
                                    <h4 class="mb-0 font-size-18">Add Donation</h4>
                                    <div class="page-title-right">
                                        <ol class="breadcrumb m-0">
                                            <li class="breadcrumb-item">
                                                <a href="javascript: void(0);">Dashboard</a></li>
                                            <li class="breadcrumb-item active">Add New Donation</li>
                                        </ol>
                                    </div>
                                </div>
                                    <div class="row">
                            <div class="col-lg-12">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="d-flex mb-1">
                                            <h4 class="card-title mb-4">Add New Donation</h4>
                                            <a class="ml-auto" href="/admin/manageRoom">
                                                <button class="ml-auto btn btn-sm" style="background: #0553A3; color: #fff">View Donation</button>
                                                </a>
                                                </div>
                                        <div class="row">
                            <div class="col-lg-12">
                                
                                       
                                        <div class="card">
                                    <div class="card-body">
                                        <form class="addRoom" method="post" enctype="multipart/form-data" action="/admin/addRoom" >
                                            <div id="alert-success" role="alert" class="alert alert-success text-center"></div>
                                            
                                          
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <div>
                                                        <div class="form-group mb-4">
                                                            <label for="input-date1">Name Of the donation</label>
                                                            <input id="name" class="form-control input-mask" data-inputmask="'alias': 'datetime'" data-inputmask-inputformat="dd/mm/yyyy">
                                                            
                                                        </div>
                                                        <div class="form-group mb-4">
                                                            <label for="input-date2">Goal (Amount)</label>
                                                            <input id="bedType" class="form-control input-mask" data-inputmask="'alias': 'datetime'" data-inputmask-inputformat="mm/dd/yyyy">
                                                          
                                                        </div>
                                                      
                                                    </div>
                                                </div>

                                                
                                                <div class="col-lg-12">
                                                    <div class="mt-4 mt-lg-0">
                                                        <div class="form-group mb-4">
                                                            <label for="input-repeat">Reason 1</label>
                                                            <input id="price" class="form-control input-mask" data-inputmask="'mask': '9', 'repeat': 10, 'greedy' : false" >
                                                      
                                                        </div>
                                                        
                                                    </div>
                                                </div>

                                                <div class="col-lg-12">
                                                    <div class="mt-4 mt-lg-0">
                                                        <div class="form-group mb-4">
                                                            <label for="input-repeat">Reason 2</label>
                                                            <input id="discount" class="form-control input-mask" data-inputmask="'mask': '9', 'repeat': 10, 'greedy' : false" >
                                                      
                                                        </div>
                                                        
                                                    </div>
                                                </div>

                                                <div class="col-lg-12">
                                                    <div class="mt-4 mt-lg-0">
                                                        <div class="form-group mb-4">
                                                            <label for="input-repeat">Reason 3</label>
                                                            <input id="availableRoom" class="form-control input-mask" data-inputmask="'mask': '9', 'repeat': 10, 'greedy' : false" >
                                                        </div>
                                                        
                                                    </div>
                                                </div>

                                                <div class="col-lg-12">
                                                    <div class="mt-4 mt-lg-0">
                                                        <div class="form-group mb-4">
                                                            <label for="input-repeat">Reason 4</label>
                                                            <input id="maxUser" class="form-control input-mask" data-inputmask="'mask': '9', 'repeat': 10, 'greedy' : false" >
                                                        </div>
                                                        
                                                    </div>
                                                </div>

                                                <div class="col-lg-12">
                                                    <div class="mt-4 mt-lg-0">
                                                        <div class="form-group mb-4">
                                                            <label for="input-repeat">Donation Description</label>
                                                            <textarea id="facilities" class="form-control input-mask" data-inputmask="'mask': '9', 'repeat': 10, 'greedy' : false" ></textarea>
                                                      
                                                        </div>
                                                        
                                                    </div>
                                                </div>
                                                <div class="col-lg-12">
                                                    <label for="formname">Select Room Image :</label>
                                                    <div class="mt-4 mt-lg-0">
                                                        <div class="form-group mb-4">
                                                            <input id="logo" name="imagename" type="file" required>
                                                        </div>
                                                    </div>
                                                </div>

                                                </div>
                                                    <div class="d-flex justify-content-center mt-4">
                                                <button type="submit" style="background: #0553A3; height: 30px; color: #fff"  class="btn btn-sm">Add New Room</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                        </div>
                        </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <%- include('partials/footer'); %>
            </div>
        </div>

        
        <script src="/libs/jquery/jquery.min.js"></script>
        <script src="/jquery.form.min.js"></script>
        <script src="/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="/libs/metismenu/metisMenu.min.js"></script>
        <script src="/libs/simplebar/simplebar.min.js"></script>
        <script src="/libs/node-waves/waves.min.js"></script>
        <script src="/js2/app.js"></script>
        <script src="/comment.js"></script>
    </body>
</html>