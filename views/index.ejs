    <script>

        const formAddition = document.querySelector('#newNews');
    
        formAddition.addEventListener('submit', (e) => {
            e.preventDefault();
            const email = document.querySelector('#mail').value;
    
            const payload = { email };
            
            $.ajax({
                data: payload,
                url: `/message`,
                method: "POST",
                contentType: "application/x-www-form-urlencoded",
                success: function (response) {
                    if (response) {
                        const comming = response.from;
                        $("#mail").val("");
                        if (comming.status == "200") {
                            toastr.success(`${comming.comment}`);
                        }else {
                            toastr.error(`${comming.comment}`)
                        }
                    }
                },
            });
